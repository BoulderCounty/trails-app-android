<?xml version="1.0" encoding="utf-8"?>
<org.bouldercounty.parks.trails.data.TrailListItem
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:paddingTop="1dip"
  android:paddingRight="2dip"
  android:paddingLeft="2dip"
  android:paddingBottom="1dip"
  android:minHeight="50dp"
  android:gravity="center_vertical"
  android:drawSelectorOnTop="true"
  >

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	  	android:layout_marginRight="5dp"
	  	android:layout_marginLeft="0dp"
    	android:orientation="horizontal"
    >
 	<RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    >
		<TextView
		android:id="@+id/trail_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
  		android:layout_alignParentLeft="true"
  		android:layout_alignParentTop="true"
	    android:paddingLeft="10dip"
	    android:textColor="#FFFFFF"
	    android:text="trailName"
	    android:textSize="18dp"
	    android:textStyle="bold"
	    />
 		</RelativeLayout>
 	<RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    >
		<TextView
		android:id="@+id/trail_length"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
  		android:layout_alignParentRight="true"
	    android:paddingLeft="10dip"
	    android:paddingTop="3dip"
	    android:textColor="#FFFFFF"
	    android:text="trailDistance"
	    />
 	</RelativeLayout>
	
    </LinearLayout>
    	
	<TextView
		android:id="@+id/park_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#FFFFFF"
	    android:text="trailSystem"
	    android:layout_marginBottom="0dp"
	    android:layout_alignParentLeft="true"
	    android:paddingLeft="10dip"
		android:layout_centerVertical="true"
	    />
	
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="45dp"
  	android:layout_alignParentBottom="true"
	    android:paddingLeft="8dip"
    >

		<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	    >
	    
<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:layout_below="@+id/trail_length"
  	android:layout_alignParentLeft="true"
  	android:layout_marginTop="26dp"
	    android:textSize="11dp"
	    android:textStyle="bold"
    >
	<TextView
	    android:id="@+id/trail_difficulty"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="trailDifficulty"
		android:layout_below="@id/park_name"
	    android:textColor="#000000" 
	    android:textSize="11dp"
	    android:textStyle="bold"
	    android:layout_marginLeft="1dp"
	    />
<!-- 	    android:textStyle="bold" -->
</RelativeLayout>
		
<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:layout_below="@+id/trail_length"
  	android:layout_alignParentRight="true"
  	android:layout_marginTop="3dp"
  	android:layout_marginRight="5dp"
    >
	<ImageView
	    android:id="@+id/dog_image"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/listdog"
		android:layout_marginLeft="3dp"
		android:layout_marginTop="8dp"
        android:visibility="visible"
	    />

    <ImageView
	    android:id="@+id/bike_image"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/listbike"
	    android:layout_toRightOf="@id/dog_image"
		android:layout_marginLeft="3dp"
		android:layout_marginTop="11dp"
        android:visibility="visible"
	    />

	<ImageView
	    android:id="@+id/hiker_image"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/listhiker"
	    android:layout_toRightOf="@id/bike_image"
		android:layout_marginLeft="3dp"
		android:layout_marginTop="1dp"
        android:visibility="visible"
	    />

	<ImageView
	    android:id="@+id/horse_image"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/listhorse"
	    android:layout_toRightOf="@id/hiker_image"
		android:layout_marginLeft="3dp"
        android:visibility="visible"
	    />
</RelativeLayout>

		</RelativeLayout>
	</RelativeLayout>
</LinearLayout>
</org.bouldercounty.parks.trails.data.TrailListItem>    
